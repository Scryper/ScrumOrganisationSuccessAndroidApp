<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SprintActivity">

    <TextView
        android:id="@+id/tv_sprintActivity_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="Description :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ActivitySprint_ProjectTitle" />

    <TextView
        android:id="@+id/tv_sprintActivity_ph_description"
        android:layout_width="254dp"
        android:layout_height="36dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="24dp"
        android:text="Placeholder description"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_sprintActivity_description"
        app:layout_constraintTop_toBottomOf="@+id/tv_ActivitySprint_ProjectTitle" />

    <TextView
        android:id="@+id/tv_ActivitySprint_ProjectTitle"
        android:layout_width="264dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="Project Name"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toEndOf="@+id/tv_ActivitySprint_SprintFrom"
        app:layout_constraintTop_toBottomOf="@+id/tv_ActivitySprint_Title" />

    <ListView
        android:id="@+id/lv_sprintActivity_simpleList"
        android:layout_width="409dp"
        android:layout_height="521dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sprintActivity_ph_description">


    </ListView>

    <TextView
        android:id="@+id/tv_ActivitySprint_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sprint"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ActivitySprint_SprintFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="86dp"
        android:text="Sprint from :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>